{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "allowJs": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": ".",                         // ✅ Permite usar aliases
    "paths": {
      "canvas": ["./src/shims/canvas"]     // ✅ TypeScript usará shim en vez de canvas nativo
    }
  },
  "include": ["src"]
}
